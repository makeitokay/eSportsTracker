@page
@model LoginModel

@{
    ViewData["Title"] = "Авторизация";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <h1>@ViewData["Title"]</h1>
        <section>
            <form id="account" method="post">
                <h2>Используйте данные своего аккаунта, чтобы авторизоваться.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating pb-2">
                    <input asp-for="Input.Login" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Login" class="form-label"></label>
                    <span asp-validation-for="Input.Login" class="text-danger"></span>
                </div>
                <div class="form-floating pb-2">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="pb-2">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="pb-2">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Авторизоваться</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Забыли пароль?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Зарегистрироваться</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Отправить письмо с подтверждением почты</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
